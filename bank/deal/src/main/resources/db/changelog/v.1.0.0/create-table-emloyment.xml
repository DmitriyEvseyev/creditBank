<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-table-employment" author="evseev">
        <createTable tableName="employment">
            <column name="employment_uuid" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="status" type="VARCHAR(50)"/>
            <column name="employer_inn" type="VARCHAR(12)"/>
            <column name="salary" type="DECIMAL(15, 2)"/>
            <column name="position" type="VARCHAR(50)"/>
            <column name="work_experience_total" type="INTEGER">
                <constraints checkConstraint="work_experience_total > 0"/>
            </column>
            <column name="work_experience_current" type="INTEGER">
                <constraints checkConstraint="work_experience_current > 0"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>