<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="create-table-credit" author="evseev">
        <createTable tableName="credit">
            <column name="credit_id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="amount" type="NUMERIC(19, 4)"/>
            <column name="term" type="INTEGER"/>
            <column name="monthly_payment" type="NUMERIC(19, 4)"/>
            <column name="rate" type="NUMERIC(5, 2)"/>
            <column name="psk" type="NUMERIC(19, 4)"/>
            <column name="payment_schedule" type="JSONB"/>
            <column name="insurance_enabled" type="BOOLEAN"/>
            <column name="salary_client" type="BOOLEAN"/>
            <column name="credit_status" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

</databaseChangeLog>